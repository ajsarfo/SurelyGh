<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PostItemStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#1A1A1A</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
       <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="CustomToolbarStyle" parent="TextAppearance.MaterialComponents.Headline6">

    </style>

    <style name="PostBottomItemStyle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/color_post_item_bottom_icon_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomTabStyle" parent="Widget.AppCompat.ActionBar.TabText">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="DetailTitleStyle" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailSlugStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>

    </style>
</resources>